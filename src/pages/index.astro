---
import Layout from '../layouts/Layout.astro';
import HeroSection from '../components/HeroSection.svelte';
import Timeline from '../components/Timeline.svelte';
import ProductsSection from '../components/ProductsSection.astro';
import MissionValues from '../components/MissionValues.astro';
import ContactUsSection from '../components/ContactUsSection.astro';
import { milestones } from '../config/milestones';
---

<Layout title="Regal Roots Farm - Sustainable Farming">
  <HeroSection
    client:visible
    heading="Welcome to Regal Roots: The Grove and Goatery"
    subtitle="Sustainable. Community-Focused. Real."
    primaryCtaLabel="View Business Plan"
    primaryCtaHref="/RegalRoots/business"
    secondaryCtaLabel="Contact Us"
    secondaryCtaHref="#contact"
  />

  <!-- Business Section -->
  <section class="content-section">
    <h2 class="section-title">Business Documentation</h2>
    <p class="section-subtitle">
      Our strategy, financial projections, and operational framework
    </p>
    <div class="card business-highlight">
      <h3 class="card-title">Business Plan</h3>
      <p class="card-text">
        Access our comprehensive business strategy, including our goals, financial projections, and operational framework for sustainable farming.
      </p>
      <a href="/RegalRoots/business" class="link-arrow">View Business Plan â†’</a>
    </div>
  </section>

  <!-- History of the Farm -->
  <section class="content-section farm-history">
    <h2 class="section-title">Our History</h2>
    <p class="section-subtitle">
      A look back at how Regal Roots Farm came to be
    </p>
    <div class="card">
      <h3 class="card-title">Founding of the Farm</h3>
      <p class="card-text">
        Regal Roots was founded in 2010 with the vision of creating a sustainable and community-focused farm.
      </p>
    </div>
    <Timeline client:visible items={milestones} />
  </section>

  <!-- Mission & Values Section -->
  <MissionValues />

  <!-- Products Section -->
  <ProductsSection />

  <!-- Contact Section -->
  <ContactUsSection />
</Layout>
