{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "types": ["astro/client"],
    "typeRoots": ["node_modules/@types", "src"]
  },
  "include": [
    ".astro/types.d.ts", 
    "**/*", 
    "src/**/*",
    "src/**/*.ts",
    "src/**/*.astro",
    "src/**/*.svelte"
  ],
  "exclude": ["dist", "node_modules"],
}
